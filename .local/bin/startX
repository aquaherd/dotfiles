#!/bin/sh
if [ $# -ne 1 ]; then
    echo "Usage: startX XORG_SESSION"
    echo "       where XORG_SESSION is one of:"
    for s in $(cat /usr/share/xsessions/*|grep ^Exec|cut -d'=' -f2); do
        echo "- $s"
    done
    exit 1
fi

tty=$(tty)

case $tty in
/dev/tty?)
    idx=$(echo $tty | cut -d'y' -f2)
    ;;
*)  echo "$tty: Start this from a virtual console only"
    exit 1
    ;;
esac

if [ $1 = "default" ]; then
    startx
else
    DISPLAY=:$idx xinit $(which $1) -- :$idx vt0$idx
fi
