#!/bin/sh
case $DESKTOP_SESSION in
i3)
    export DMENU_DEFAULTS='-fn Cantarell:bold:pixelsize=20 -sb #bd93f9'
    ;;
bspwm) 
    export DMENU_DEFAULTS='-fn Cantarell:fontformat=truetype:pixelsize=20 -nb #44475a -sb #bd93f9'
    ;;
xfce) 
    export DMENU_DEFAULTS='-fn Cantarell:fontformat=truetype:pixelsize=22 -sb #bd93f9'
    systemctl --user start xfce4-notifyd.service
    ;;
esac

PATH=$PATH:~/.local/bin
